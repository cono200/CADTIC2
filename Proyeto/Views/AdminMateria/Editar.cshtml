@model Proyeto.Models.AdminMateriaModel

@{
    ViewData["Title"] = "Editar Materia";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        /* Additional custom styles can be added here */
        body {
            background-color: #f7f7f7;
            font-family: Arial, sans-serif;
        }

        .card {
            margin: 20px auto;
            max-width: 600px;
            border: none;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
        }

        .card-body {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                Editar Materia
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form asp-action="Editar">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="IdAdminMateria" class="control-label">ID de la Materia</label>
                                <input asp-for="IdAdminMateria" class="form-control" />
                                <span asp-validation-for="IdAdminMateria" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NombreMat" class="control-label">Nombre de la Materia</label>
                                <input asp-for="NombreMat" class="form-control" />
                                <span asp-validation-for="NombreMat" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                                <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

