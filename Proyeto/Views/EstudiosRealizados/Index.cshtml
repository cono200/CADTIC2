@model IEnumerable<Proyeto.Models.EstudiosRealizadosModel>

@{
    ViewData["Title"] = "Estudios Realizados";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet1.css" />
    <link rel="stylesheet" href="~/css/footerFelcidades.css" />
    <style>
        /* Additional custom styles can be added here */
        body {
            background-color: #f7f7f7;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        .table {
            margin-top: 20px;
        }

        /* Border style for each row */
        .table-bordered tbody tr {
            border-bottom: 1px solid #dee2e6;
        }

        /* Adding padding and aligning text in cells */
        .table td, .table th {
            padding: 8px;
            vertical-align: middle;
        }

        /* Button styling */
        .btn-action {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Estudios Realizados</h1>
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a class="btn btn-primary btn-action" asp-action="Crear">Nuevo</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.NombreCurso)</th>
                                <th>@Html.DisplayNameFor(model => model.Duracion)</th>
                                <th>@Html.DisplayNameFor(model => model.Institucion)</th>
                                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.UrlDocumento)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NombreCurso)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Duracion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Institucion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UrlDocumento)</td>
                                    <td>
                                        <div class="btn-group">
                                            @Html.ActionLink("Editar", "Editar", new { id = item.IdEstudiosRealizados }, new { @class = "btn btn-info btn-sm btn-action" })
                                            @Html.ActionLink("Detalles", "Detalle", new { id = item.IdEstudiosRealizados }, new { @class = "btn btn-primary btn-sm btn-action" })
                                            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdEstudiosRealizados }, new { @class = "btn btn-danger btn-sm btn-action" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


