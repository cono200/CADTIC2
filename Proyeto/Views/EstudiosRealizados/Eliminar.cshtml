@model Proyeto.Models.EstudiosRealizadosModel

@{
    ViewData["Title"] = "Eliminar Estudios Realizados";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<style>
    /* Additional custom styles can be added here */
    body {
        background-color: #f7f7f7;
        font-family: Arial, sans-serif;
    }

    .card-body {
        padding: 20px;
    }

    dt {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-group {
        margin-top: 20px;
    }
</style>

<div class="container">
    <h3 class="mt-4">¿Estás seguro que deseas eliminar el Estudio Realizado?</h3>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Estudios Realizados</h4>
            <hr />
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Id Estudios Realizados</th>
                        <td>@Html.DisplayFor(model => model.IdEstudiosRealizados)</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre Curso</th>
                        <td>@Html.DisplayFor(model => model.NombreCurso)</td>
                    </tr>
                    <tr>
                        <th scope="row">Matri/NoEmpl</th>
                        <td>@Html.DisplayFor(model => model.Matri_NoEmpl)</td>
                    </tr>
                    <!-- ... (other fields) ... -->
                    <tr>
                        <th scope="row">Autor</th>
                        <td>@Html.DisplayFor(model => model.Autor1.Nombre)</td>
                    </tr>
                </tbody>
            </table>
            <form asp-action="Eliminar" class="mt-3">
                <div class="btn-group">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <span style="margin-right: 10px;"></span>
                    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
